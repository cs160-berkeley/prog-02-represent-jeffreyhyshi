<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hilary" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/pic"
            android:text="Hillary Clinton"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/affiliation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/pic"
            android:background="@drawable/circle_grey"
            android:gravity="center"
            android:textColor="#eeeeee"
            android:text="I" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/affiliation"
            android:gravity="center_vertical"
            android:text="New York" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/pic"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/twitter_logo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/twitter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/twitter_logo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/twitter_logo"
            android:fontFeatureSettings="smcp"
            android:text="latest tweet" />

        <TextView
            android:id="@+id/tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/twitter_logo"
            android:layout_margin="10dp"
            android:text="No Twitter account found" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tweet"
            android:layout_marginTop="5dp"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/bottom_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mail" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/email_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/email_icon"
            android:text="hillaryclinton@hillaryclinton.com" />

        <ImageView
            android:id="@+id/website_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/email_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/web" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/website_icon"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/website_icon"
            android:text="hillaryclinton.com" />

        <View
            android:id="@+id/button_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/website_icon"
            android:layout_marginTop="10dp"
            android:background="#eeeeee" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/button_line"
            android:text="..."
            android:gravity="center|top"
            android:paddingTop="1dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>